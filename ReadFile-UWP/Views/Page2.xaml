<Page
    x:Class="ReadFile_UWP.Page2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReadFile_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="0,50,0,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Current Files" Margin="0,0,65,0"/>
                <TextBox x:Name="NameFile" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <TextBlock Text="File Content" Margin="0,0,22,0"/>
                <TextBox AcceptsReturn="True" x:Name="Content" Width="250" Height="150"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
